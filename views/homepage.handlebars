<div class="container">
    <h2 class="text-center">Home Page</h2>
    {{#if loggedIn}}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Create a New Post</h3>
                    <p class="text-muted">Share your thoughts and stories with the community</p>
                </div>
                <div class="panel-body">
                    <form class="new-post-form">
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <br>
                            <input type="text" name="title" id="title" placeholder="Title" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="content">Content:</label>
                            <br>
                            <textarea name="content" id="content" placeholder="Write your blog content here..." class="form-control" rows="10" required></textarea>
                        </div>
                        <div class="text-left">
                            <input type="submit" value="Publish" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="./js/newPost.js"></script>
    {{else}}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <p class="text-center">You must be <a href="/login">logged in</a> to create a post.</p>
        </div>
    {{/if}}
</div>

