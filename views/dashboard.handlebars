<section class="container">
    <h2>Dashboard view</h2>
    <h3>All Posts</h3>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                {{#if loggedIn}}
                <a href="/" class="btn btn-primary">Add New Post</a>
                {{else}}
                <a href="/login" class="btn btn-primary">Login to Add New Post</a>
                {{/if}}
            </div>
        </div>
    </div>
    {{#each posts as |post|}}
    {{> post-details}}
    {{/each}}



</section>   