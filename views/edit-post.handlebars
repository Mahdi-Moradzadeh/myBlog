<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Edit Post {{post.id}} Detail:</h2>
                </div>
                <div class="panel-body">
                    <form class="update-post-form">
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" name="title" id="title" placeholder="Title" class="form-control" value="{{post.title}}" required>
                        </div>
                        <div class="form-group">
                            <label for="content">Content:</label>
                            <textarea name="content" id="content" placeholder="Write your blog content here..." class="form-control" rows="10" required>{{post.content}}</textarea>
                        </div>
                        <input type="submit" value="Update" class="btn btn-primary" id="submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/updatePost.js"></script>
</div>