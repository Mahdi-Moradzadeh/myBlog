<section>
    <h2>Post ID: {{post.id}}</h2>
    <section style="background-color: white;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{post.title}}</h3>
            </div>
            <div class="panel-body">
                <span class="post-details">
                    <span class="post-details__author">by | {{post.user.username}} |</span>
                    <span class="post-details__date">{{format_time post.createdAt}}</span>
                </span>
                <p>{{post.content}}</p>
            </div>
        </div>
        <p>_______________________________________________________</p>
        <h3>Comments</h3>
        {{#each comments as |comment|}}
            {{> comments-details}}
        {{/each}}
        <button class="btn btn-primary" id="back-button" data-url="./">Back</button>

        {{#if isAuthor}}
        <button class="btn btn-primary" id="delete-button" data-url="/dashboard/posts/delete/{{post.id}}">Delete</button>
        <button class="btn btn-primary" id="edit-button" data-url="/dashboard/posts/edit/{{post.id}}">Edit</button>
        {{/if}}
        <button class="btn btn-primary" id="add-comment-button" data-url="/dashboard/add-comment/{{post.id}}">Add a Comment</button>

    </section>
</section>
<script src="/js/single-post.js"></script>
